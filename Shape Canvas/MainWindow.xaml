<Window x:Class="Shape_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shape_Canvas"
        mc:Ignorable="d"
        Title="Shape Creator" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="35*" />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MyCanvas" Background="GreenYellow"  MouseLeftButtonDown="Canvas_MouseLeftButtonDown"/>
        <Grid Grid.Column="2" Background="CornflowerBlue"/>
        <Button Grid.Column="2" Width="100" Height="50" Background="LightGray" Click="Button_Click">Clear</Button>
        
    </Grid>
</Window>
